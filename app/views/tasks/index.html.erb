<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Desc</th>
    <th>Status</th>
    <th>Due date</th>
    <th>Estimated hours</th>
    <th>Url</th>
    <th>Order</th>
    <th>Parent</th>
    <th>Parent type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.desc %></td>
    <td><%= task.status %></td>
    <td><%= task.due_date %></td>
    <td><%= task.estimated_hours %></td>
    <td><%= task.url %></td>
    <td><%= task.order %></td>
    <td><%= task.parent_id %></td>
    <td><%= task.parent_type %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

