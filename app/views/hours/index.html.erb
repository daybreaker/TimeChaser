<h1>Listing hours</h1>

<table>
  <tr>
    <th>Minutes</th>
    <th>Task</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hours.each do |hour| %>
  <tr>
    <td><%= hour.minutes %></td>
    <td><%= hour.task_id %></td>
    <td><%= link_to 'Show', hour %></td>
    <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
    <td><%= link_to 'Destroy', hour, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

